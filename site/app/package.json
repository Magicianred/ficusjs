{
  "name": "ficusjs-site",
  "version": "1.0.0",
  "description": "Website for FicusJS",
  "scripts": {
    "build": "eleventy --input=src --output=dist",
    "build:css": "postcss src/css --dir dist/css",
    "build:js": "terser -c -m -o dist/js/scribbler.js src/js/scribbler.js",
    "postbuild": "run-p build:* copy:*",
    "copy:css": "ncp src/css dist/css",
    "copy:js": "ncp src/js dist/js",
    "copy:favicon": "ncp src/favicon.ico dist/favicon.ico",
    "copy:img": "ncp src/img dist/img",
    "copy:manifest": "ncp src/manifest.json dist/manifest.json",
    "dev": "eleventy --input=src --output=dist --serve",
    "start": "npm run dev"
  },
  "author": "Matt Levy",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "cssnano": "4.1.10",
    "ncp": "2.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.0.9",
    "postcss-cli": "8.0.0",
    "standard": "14.3.4",
    "terser": "5.3.2"
  }
}
