{
  "name": "ficusjs-site",
  "version": "1.0.0",
  "description": "Website for FicusJS",
  "scripts": {
    "build": "cross-env NODE_ENV=production eleventy --input=src --output=dist",
    "build:css": "postcss src/css --dir dist/css",
    "postbuild:css": "run-p concat:css:*",
    "concat:css:home": "concat-cli -f dist/css/scribbler-global.css dist/css/scribbler-landing.css -o dist/css/home.css",
    "concat:css:doc": "concat-cli -f dist/css/scribbler-global.css dist/css/scribbler-doc.css dist/css/darcula.css -o dist/css/doc.css",
    "build:js": "terser -c -m -o dist/assets/js/main.js src/assets/js/main.js",
    "postbuild": "mkdirp dist/assets/js && run-s build:* copy:* workbox:gen",
    "clean": "rimraf dist",
    "copy:assets": "ncp src/assets dist/assets",
    "copy:favicon": "ncp src/favicon.ico dist/favicon.ico",
    "copy:apple-touch-icon": "ncp src/apple-touch-icon.png dist/apple-touch-icon.png",
    "copy:img": "ncp src/img dist/img",
    "copy:manifest": "ncp src/ficus.webmanifest dist/ficus.webmanifest",
    "dev": "cross-env NODE_ENV=development eleventy --input=src --output=dist --serve",
    "predev": "npm run postbuild",
    "start": "npm run dev",
    "workbox:gen": "workbox generateSW workbox-config.js"
  },
  "author": "Matt Levy",
  "devDependencies": {
    "@11ty/eleventy": "0.12.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "3.1.0",
    "@ficusjs/components": "1.0.0-alpha.13",
    "@ficusjs/styles": "1.0.0-alpha.15",
    "clean-css": "5.1.2",
    "concat-cli": "4.0.0",
    "cross-env": "7.0.3",
    "cssnano": "4.1.11",
    "eleventy-plugin-nesting-toc": "1.2.0",
    "html-minifier": "4.0.0",
    "markdown-it": "12.0.4",
    "markdown-it-anchor": "7.1.0",
    "markdown-it-emoji": "2.0.0",
    "markdown-it-table-of-contents": "0.5.2",
    "mkdirp": "1.0.4",
    "ncp": "2.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.2.9",
    "postcss-cli": "8.3.1",
    "rimraf": "3.0.2",
    "slugify": "1.5.0",
    "standard": "16.0.3",
    "terser": "5.6.1",
    "workbox-cli": "6.1.2"
  }
}
