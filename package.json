{
  "name": "ficus",
  "version": "0.1.0",
  "description": "Ficus is a simple web component creation library",
  "main": "index.js",
  "scripts": {
    "build": "rollup -i src/component.js -o dist/component.js -f es -p 'terser={output: {indent_level: 2}}'",
    "build2": "rollup src/component.js --file dist/component.js --format es --compact",
    "test": "ava",
    "serve": "serve"
  },
  "author": "Matt Levy",
  "license": "ISC",
  "devDependencies": {
    "ava": "3.12.1",
    "puppeteer": "5.3.0",
    "rollup": "2.28.1",
    "rollup-plugin-terser": "7.0.2",
    "serve": "11.3.2",
    "standard": "14.3.4"
  }
}
